<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bumbumapps.hue.MainMenuActivity"
    android:background="@drawable/back">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/coinsbackground"
        android:layout_marginEnd="20dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:id="@+id/coins_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@android:color/white"
            android:layout_gravity="center_vertical"
            android:textSize="25sp"
            android:layout_marginEnd="10dp"

            />

        <ImageView
            android:id="@+id/coin"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/coins"
            />
    </LinearLayout>

    <Button
        android:id="@+id/main_menu_start_game"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:text="Start Game"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4" />


    <Button
        android:background="@drawable/rectangle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="36dp"
        app:layout_constraintTop_toBottomOf="@+id/main_menu_start_game"
        android:id="@+id/main_menu_how_to"
        android:text="How To Play"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:textSize="18sp"/>



</androidx.constraintlayout.widget.ConstraintLayout>

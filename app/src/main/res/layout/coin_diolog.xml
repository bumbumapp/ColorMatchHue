<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:background="@drawable/coinsbackground"
    android:backgroundTint="@android:color/white">
    <ImageView
        android:id="@+id/coins"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/coins"
        />

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/coins"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:fontFamily="@font/roboto"
        android:text="If you want to know correct color tile,you must spend 5 coin"
        android:textAlignment="center"
        android:textColor="#1A1A5A"
        android:textSize="20sp" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="15dp"
    android:layout_marginTop="25dp"
    android:layout_marginEnd="15dp"
    android:layout_marginBottom="25dp"
    android:layout_below="@+id/text"
    android:weightSum="3">
    <TextView
        android:id="@+id/cancel"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:fontFamily="@font/roboto"
        android:text="Cancel"
        android:layout_gravity="center_vertical"
        android:textColor="#1A1A5A"
        android:textSize="20sp" />
    <Button
        android:id="@+id/reward_btn"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:backgroundTint="#1A1A5A"
        android:text="Watch Video"
        android:textAllCaps="false"
        android:paddingRight="15dp"
        android:visibility="visible"
        android:fontFamily="@font/roboto"
        android:paddingLeft="15dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:textSize="20sp"
        android:textAlignment="center"
        android:background="@drawable/coinsbackground"
        android:textColor="#ffffff"/>
    <Button
        android:id="@+id/spend_btn"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:backgroundTint="#131350"
        android:text="Spend Coin"
        android:fontFamily="@font/roboto"
        android:textAllCaps="false"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:layout_marginStart="15dp"
        android:textSize="20sp"
        android:textAlignment="center"
        android:background="@drawable/coinsbackground"
        android:textColor="#ffffff"/>
</LinearLayout>



</RelativeLayout>